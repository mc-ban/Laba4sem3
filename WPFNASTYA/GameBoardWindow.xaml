<Window x:Class="CardGame.GUI.GameBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CardGame.GUI.Converters"
        Title="Дуэль Магов" 
        Height="1000" 
        Width="1800"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#0A0A0A"
        Loaded="Window_Loaded">

    <Window.Resources>
        <local:FactionToColorConverter x:Key="FactionColorConverter"/>
        <local:IsNotNullConverter x:Key="IsNotNullConverter"/>
        <local:AbilityToIconConverter x:Key="AbilityIconConverter"/>
        <local:CardTypeToVisibilityConverter x:Key="CardTypeConverter"/>
        <local:HealthToColorConverter x:Key="HealthColorConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>

        <Color x:Key="BrightParchment">#5A3D25</Color>
        <Color x:Key="BrightCopper">#B86F2F</Color>
        <Color x:Key="BrightGold">#FFC125</Color>
        <Color x:Key="BrightGreen">#32CD32</Color>
        <Color x:Key="BrightRed">#DC143C</Color>
        <Color x:Key="BrightBlue">#1E90FF</Color>
        <Color x:Key="BrightPurple">#9370DB</Color>

        <SolidColorBrush x:Key="ParchmentBrush" Color="{StaticResource BrightParchment}"/>
        <SolidColorBrush x:Key="CopperBrush" Color="{StaticResource BrightCopper}"/>
        <SolidColorBrush x:Key="GoldBrush" Color="{StaticResource BrightGold}"/>
        <SolidColorBrush x:Key="HealthBrush" Color="{StaticResource BrightRed}"/>
        <SolidColorBrush x:Key="ManaBrush" Color="{StaticResource BrightBlue}"/>
        <SolidColorBrush x:Key="BrightGreenBrush" Color="{StaticResource BrightGreen}"/>
        <SolidColorBrush x:Key="BrightPurpleBrush" Color="{StaticResource BrightPurple}"/>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#80202020"/>
            <Setter Property="Foreground" Value="{StaticResource GoldBrush}"/>
            <Setter Property="FontFamily" Value="Palatino Linotype"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="{StaticResource CopperBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Rectangle x:Name="highlight" 
                                           Fill="{StaticResource GoldBrush}" 
                                           Opacity="0" 
                                           RadiusX="6" 
                                           RadiusY="6"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A0404040"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                                <Setter TargetName="highlight" Property="Opacity" Value="0.2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Gold" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#60101010"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HandCardStyle" TargetType="Border">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Margin" Value="8,5"/>
            <Setter Property="Background" Value="#50000000"/>
            <Setter Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="4" Color="Black" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CreatureFieldStyle" TargetType="Border">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="200"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Color="Black" Opacity="0.9"/>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="CardToolTipTemplate">
            <Border Width="280" Height="380" Background="#E0221810" BorderBrush="{StaticResource GoldBrush}" BorderThickness="2" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="180"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" CornerRadius="6,6,0,0" ClipToBounds="True">
                        <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}" Stretch="UniformToFill"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="10">
                        <TextBlock Text="{Binding Name}" Foreground="{StaticResource GoldBrush}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                            <Border Background="#3A2912" CornerRadius="4" Padding="6,2">
                                <TextBlock Text="{Binding Faction}" Foreground="#CCCCCC" FontSize="12"/>
                            </Border>
                            <Border Background="#3A2912" CornerRadius="4" Padding="6,2" Margin="5,0,0,0">
                                <TextBlock Text="{Binding Rarity}" Foreground="#CCCCCC" FontSize="12"/>
                            </Border>
                        </StackPanel>

                        <Border Background="#2A1C0E" CornerRadius="4" Padding="8" Margin="0,8">
                            <TextBlock Text="{Binding Description}" Foreground="#DDDDDD" FontSize="12" TextWrapping="Wrap"/>
                        </Border>

                        <StackPanel Visibility="{Binding Type, Converter={StaticResource CardTypeConverter}}" Margin="0,8">
                            <Grid HorizontalAlignment="Center">
                                <Border Background="#CC3333" Width="60" Height="40" CornerRadius="6,0,0,6">
                                    <StackPanel>
                                        <TextBlock Text="АТАКА" Foreground="White" FontSize="9" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Attack}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#33CC33" Width="60" Height="40" CornerRadius="0,6,6,0" HorizontalAlignment="Right">
                                    <StackPanel>
                                        <TextBlock Text="ЗДОРОВЬЕ" Foreground="White" FontSize="9" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Health}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Row="2" Background="#1A1008" CornerRadius="0,0,6,6" Padding="8">
                        <ItemsControl ItemsSource="{Binding Abilities}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#3A2912" CornerRadius="3" Padding="4,2" Margin="2">
                                        <TextBlock Text="{Binding Symbol}" Foreground="#FFC125" FontSize="10" FontWeight="Bold"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>

        <Style x:Key="DetailedToolTipStyle" TargetType="ToolTip">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="HandCardTemplate">
            <Border x:Name="CardBorder"
            Style="{StaticResource HandCardStyle}"
            MouseDown="Card_MouseDown"
            MouseMove="Card_MouseMove"
            MouseUp="Card_MouseUp"
            Tag="{Binding}">

                <Border.ToolTip>
                    <ToolTip Style="{StaticResource DetailedToolTipStyle}">
                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource CardToolTipTemplate}"/>
                    </ToolTip>
                </Border.ToolTip>

                <Grid>
                    <!-- Фоновое изображение -->
                    <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}" 
                   Stretch="UniformToFill" Opacity="0.9"/>

                    <!-- Затемнение для лучшей читаемости текста -->
                    <Rectangle Fill="#80000000" RadiusX="8" RadiusY="8"/>

                    <!-- Кружок с ценой маны -->
                    <Border Width="32" Height="32"
                    CornerRadius="16" 
                    Background="{StaticResource GoldBrush}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="8"
                    BorderBrush="White"
                    BorderThickness="2">
                        <TextBlock Text="{Binding ManaCost}" 
                           Foreground="Black" 
                           FontWeight="Black"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Border>

                    <!-- Название карты -->
                    <Border Background="#80000000" 
                    CornerRadius="4"
                    Padding="5,3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,45,0,0"
                    Width="100">
                        <TextBlock Text="{Binding Name}" 
                           Foreground="White" 
                           FontSize="12"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="95"/>
                    </Border>

                    <!-- Атака и здоровье (только для существ) -->
                    <StackPanel Visibility="{Binding Type, Converter={StaticResource CardTypeConverter}}"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10"
                        Orientation="Horizontal">

                        <!-- Атака (красный) -->
                        <Border Background="#FF4444" 
                        Width="35" Height="35"
                        CornerRadius="5"
                        BorderBrush="White"
                        BorderThickness="1"
                        Margin="0,0,2,0">
                            <Grid>
                                <TextBlock Text="{Binding Attack}" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                                <!-- Иконка меча -->
                                <TextBlock Text="⚔" 
                                   FontSize="10"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="2,2,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Здоровье (зеленый) -->
                        <Border Background="#44FF44" 
                        Width="35" Height="35"
                        CornerRadius="5"
                        BorderBrush="White"
                        BorderThickness="1"
                        Margin="2,0,0,0">
                            <Grid>
                                <TextBlock Text="{Binding Health}" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                                <!-- Иконка сердца -->
                                <TextBlock Text="❤" 
                                   FontSize="10"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="2,2,0,0"/>
                            </Grid>
                        </Border>

                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="CreatureFieldTemplate">
            <Border x:Name="CreatureBorder"
            Style="{StaticResource CreatureFieldStyle}"
            Background="{Binding Faction, Converter={StaticResource FactionColorConverter}}"
            BorderBrush="{StaticResource GoldBrush}"
            BorderThickness="3"
            Tag="{Binding}"
            MouseDown="Creature_MouseDown">

                <Border.ToolTip>
                    <ToolTip Style="{StaticResource DetailedToolTipStyle}">
                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource CardToolTipTemplate}"/>
                    </ToolTip>
                </Border.ToolTip>

                <Grid>
                    <!-- Фоновое изображение -->
                    <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}" 
                   Stretch="UniformToFill" Opacity="0.9"/>

                    <!-- Затемнение -->
                    <Rectangle Fill="#80000000" RadiusX="10" RadiusY="10"/>

                    <!-- Полоска здоровья сверху -->
                    <Border Background="{Binding Health, Converter={StaticResource HealthColorConverter}}"
                    Height="6"
                    VerticalAlignment="Top"
                    CornerRadius="3,3,0,0"/>

                    <!-- Эффект заморозки -->
                    <Border Background="#BBFFFFFF" 
                    Visibility="{Binding IsFrozen, Converter={StaticResource BoolToVisConverter}}"
                    CornerRadius="8">
                        <TextBlock Text="❄" 
                           FontSize="32"
                           Foreground="#00BFFF"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Border>

                    <!-- Верхняя панель с названием -->
                    <Border Background="#A0000000" 
                    CornerRadius="5"
                    Padding="8,4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,10,0,0"
                    Width="130">
                        <TextBlock Text="{Binding Name}" 
                           Foreground="White" 
                           FontSize="14"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
                    </Border>

                    <!-- Панель атаки и здоровья -->
                    <Border Background="#40000000" 
                    CornerRadius="8"
                    Padding="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,15"
                    Width="110"
                    Height="60">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Атака -->
                            <Border Grid.Column="0" 
                            Background="#FF5555" 
                            CornerRadius="5"
                            BorderBrush="White"
                            BorderThickness="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Иконка атаки -->
                                    <TextBlock Grid.Row="0"
                                       Text="⚔" 
                                       FontSize="12"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,2,0,0"/>

                                    <!-- Значение атаки -->
                                    <TextBlock Grid.Row="1"
                                       Text="{Binding Attack}" 
                                       Foreground="White" 
                                       FontSize="20"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Разделитель -->
                            <TextBlock Grid.Column="1" 
                               Text="/" 
                               Foreground="White" 
                               FontSize="18"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                            <!-- Здоровье -->
                            <Border Grid.Column="2" 
                            Background="#55FF55" 
                            CornerRadius="5"
                            BorderBrush="White"
                            BorderThickness="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Иконка здоровья -->
                                    <TextBlock Grid.Row="0"
                                       Text="❤" 
                                       FontSize="12"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,2,0,0"/>

                                    <!-- Значение здоровья -->
                                    <TextBlock Grid.Row="1"
                                       Text="{Binding Health}" 
                                       Foreground="White" 
                                       FontSize="20"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Способности (иконки) -->
                    <!-- В CreatureFieldTemplate заменяем ItemsControl для способностей -->
                    <ItemsControl ItemsSource="{Binding Abilities}"
              VerticalAlignment="Center"
              Margin="0,0,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="30" Height="30"
                    Background="#80000000" 
                    CornerRadius="15"
                    Margin="3"
                    BorderBrush="Gold"
                    BorderThickness="1"
                    ToolTip="{Binding Description}">
                                    <TextBlock Text="{Binding Symbol}"
                           Foreground="Gold"
                           FontSize="12"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </DataTemplate>

        <DropShadowEffect x:Key="GlowEffect" Color="White" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>

        <Style x:Key="CornerInfoPanel" TargetType="Border">
            <Setter Property="Background" Value="#40000000"/>
            <Setter Property="BorderBrush" Value="{StaticResource CopperBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Image Source="/GameBoardBackground.jpg" Stretch="UniformToFill"/>

        <Border x:Name="PopupMessage" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            Background="#E0221810"
            BorderBrush="{StaticResource GoldBrush}"
            BorderThickness="2"
            CornerRadius="8"
            Padding="15,10"
            Margin="0,30"
            Opacity="{Binding MessageOpacity}"
            Visibility="{Binding IsMessageVisible, Converter={StaticResource BoolToVisConverter}}">
            <TextBlock Text="{Binding StatusMessage}" 
                   Foreground="{StaticResource GoldBrush}"
                   FontSize="16"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>
        </Border>
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="180"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="180"/>
                <RowDefinition Height="180"/>
            </Grid.RowDefinitions>

            <Border Style="{StaticResource CornerInfoPanel}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="180"
                    Height="140">
                <StackPanel>
                    <TextBlock Text="{Binding Opponent.Name}" 
                               Foreground="{StaticResource GoldBrush}" 
                               FontSize="16"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding Opponent.Faction}" 
                               Foreground="#CCCCCC" 
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,2"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0">
                        <TextBlock Text="❤" 
                                   Foreground="{StaticResource HealthBrush}" 
                                   FontSize="18"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Opponent.Health}" 
                                   Foreground="White" 
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Margin="5,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,5">
                        <TextBlock Text="⚡" 
                                   Foreground="{StaticResource ManaBrush}" 
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Opponent.Mana}" 
                                   Foreground="White" 
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="5,0"/>
                        <TextBlock Text="/" 
                                   Foreground="#888" 
                                   FontSize="14"/>
                        <TextBlock Text="{Binding Opponent.MaxMana}" 
                                   Foreground="#AAA" 
                                   FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CornerInfoPanel}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Width="120"
                    Height="120">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="КОЛОДА" 
                               Foreground="#888" 
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding OpponentDeckCount}" 
                               Foreground="White" 
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,3"/>
                    <TextBlock Text="карт" 
                               Foreground="#666" 
                               FontSize="10"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0"
                    Background="#20000000" 
                    Margin="200,50,200,-100"
                    CornerRadius="8"
                    BorderBrush="#60FFFFFF"
                    BorderThickness="2">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Hidden"
                              Padding="10">
                    <ItemsControl ItemsSource="{Binding OpponentBoard}"
                                  ItemTemplate="{StaticResource CreatureFieldTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Grid Grid.Row="1">
                <Ellipse Width="300" Height="300"
                         Stroke="{StaticResource GoldBrush}" 
                         StrokeThickness="3"
                         StrokeDashArray="5,3"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Opacity="0.4">
                    <Ellipse.Effect>
                        <BlurEffect Radius="5"/>
                    </Ellipse.Effect>
                </Ellipse>

                <Border Background="#80000000" 
                        BorderBrush="{StaticResource CopperBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="15"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="14,20,0,0">
                    <StackPanel>
                        <TextBlock Text="{Binding TurnInfo}" 
                                   Foreground="{StaticResource GoldBrush}" 
                                   FontSize="15"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding GameStatusText}" 
                                   Foreground="#DDDDDD" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Style="{StaticResource CornerInfoPanel}"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Width="180"
                    Height="140">
                <StackPanel>
                    <TextBlock Text="{Binding PlayerName}" 
                               Foreground="{StaticResource GoldBrush}" 
                               FontSize="16"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding PlayerFaction}" 
                               Foreground="#CCCCCC" 
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,2"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0">
                        <TextBlock Text="❤" 
                                   Foreground="{StaticResource HealthBrush}" 
                                   FontSize="18"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Player.Health}" 
                                   Foreground="White" 
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Margin="5,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,5">
                        <TextBlock Text="⚡" 
                                   Foreground="{StaticResource ManaBrush}" 
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Player.Mana}" 
                                   Foreground="White" 
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="5,0"/>
                        <TextBlock Text="/" 
                                   Foreground="#888" 
                                   FontSize="14"/>
                        <TextBlock Text="{Binding Player.MaxMana}" 
                                   Foreground="#AAA" 
                                   FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CornerInfoPanel}"
                    Grid.Row="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Width="120"
                    Height="120">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ВАША КОЛОДА" 
                               Foreground="#888" 
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding PlayerDeckCount}" 
                               Foreground="White" 
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,3"/>
                    <TextBlock Text="карт" 
                               Foreground="#666" 
                               FontSize="10"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="2"
                    x:Name="DropZone"
                    Background="#20000000" 
                    Margin="200,-60,200,0"
                    CornerRadius="8"
                    BorderBrush="#60FFFFFF"
                    BorderThickness="2">

                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Hidden"
                              Padding="10">

                    <ItemsControl ItemsSource="{Binding PlayerBoard}"
                                  ItemTemplate="{StaticResource CreatureFieldTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

            </Border>

            <TextBlock Text="ПЕРЕТАЩИТЕ КАРТУ СЮДА" 
                               Foreground="{StaticResource GoldBrush}"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               TextWrapping="Wrap" Margin="0,54,0,0" Grid.Row="2"/>

            <Border Grid.Row="3" 
                    Background="#40000000" 
                    BorderBrush="{StaticResource CopperBrush}"
                    BorderThickness="2,2,2,0"
                    CornerRadius="15,15,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#60000000" 
                            CornerRadius="13,13,0,0"
                            Padding="10,5">
                        <TextBlock Text="ВАША РУКА" 
                                   Foreground="{StaticResource GoldBrush}" 
                                   FontSize="14"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" 
                                  HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Disabled"
                                  Margin="10,-10">
                        <ItemsControl x:Name="HandItemsControl"
                                      ItemsSource="{Binding PlayerHand}"
                                      ItemTemplate="{StaticResource HandCardTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Row="1"
        Width="200"
        Background="#50000000"
        BorderBrush="{StaticResource CopperBrush}"
        BorderThickness="2"
        CornerRadius="10"
        Margin="15"
        HorizontalAlignment="Right">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок панели действий -->
                    <Border Grid.Row="0"
                Background="#80000000" 
                CornerRadius="6"
                Padding="8,5"
                Margin="0,0,0,10">
                        <TextBlock Text="ДЕЙСТВИЯ" 
                       Foreground="{StaticResource GoldBrush}" 
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Основная прокручиваемая область -->
                    <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0"
                      Margin="0">

                        <StackPanel Margin="0,0,5,0">
                            <!-- Кнопки действий -->
                            <Button Content="ЗАВЕРШИТЬ ХОД" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding EndTurnCommand}"/>

                            <Button Content="АТАКОВАТЬ" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding AttackCommand}"
                        IsEnabled="{Binding CanAttack}"/>

                            <Button Content="СЫГРАТЬ КАРТУ" 
        Command="{Binding PlayCardCommand}"
        CommandParameter="{Binding SelectedCard}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                                        <Setter Property="IsEnabled" Value="{Binding CanPlaySelectedCard}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedCard}" Value="{x:Null}">
                                                <Setter Property="ToolTip">
                                                    <Setter.Value>
                                                        <TextBlock Text="Выберите карту для игры" 
                                       Foreground="White" 
                                       Background="#80000000"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CanPlaySelectedCard}" Value="False">
                                                <Setter Property="ToolTip">
                                                    <Setter.Value>
                                                        <TextBlock Text="Недостаточно маны или нет места на поле" 
                                       Foreground="Red" 
                                       Background="#80000000"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="СПОСОБНОСТЬ" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding UseHeroPowerCommand}"
                        IsEnabled="{Binding CanUseHeroPower}"/>


                            <Button Content="ОТМЕНИТЬ" 
        Command="{Binding ClearSelectionCommand}"
        Margin="0,0,0,10">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                                        <Setter Property="IsEnabled" Value="{Binding SelectedCard, Converter={StaticResource IsNotNullConverter}}"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="ПРЯМАЯ АТАКА" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding DirectAttackCommand}"
                        IsEnabled="{Binding CanDirectAttack}"/>

                            <Button Content="СБРОСИТЬ ВЫБОР" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding ClearSelectionCommand}"
                        Margin="0,0,0,15"/>

                            <Button Content="СОХРАНИТЬ ИГРУ" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding SaveGameCommand}"/>

                            <Button Content="В МЕНЮ" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding BackToMenuCommand}"/>

                            <!-- Сообщение статуса -->
                            <Border Background="#60000000" 
                        BorderBrush="#40FFFFFF"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8"
                        Margin="0,10,0,10">
                                <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="{StaticResource GoldBrush}" 
                               FontSize="12"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                            </Border>

                        </StackPanel>

                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
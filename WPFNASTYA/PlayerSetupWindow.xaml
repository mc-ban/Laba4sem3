<Window x:Class="CardGame.GUI.PlayerSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CardGame.GUI.Converters"
        Title="Подготовка к дуэли" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#0A0A0A"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Заимствуем стили из GameBoardWindow -->
        <Color x:Key="BrightParchment">#5A3D25</Color>
        <Color x:Key="BrightCopper">#B86F2F</Color>
        <Color x:Key="BrightGold">#FFC125</Color>
        <Color x:Key="BrightRed">#DC143C</Color>
        <Color x:Key="BrightBlue">#1E90FF</Color>

        <SolidColorBrush x:Key="ParchmentBrush" Color="{StaticResource BrightParchment}"/>
        <SolidColorBrush x:Key="CopperBrush" Color="{StaticResource BrightCopper}"/>
        <SolidColorBrush x:Key="GoldBrush" Color="{StaticResource BrightGold}"/>

        <!-- Стиль заголовка -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource GoldBrush}"/>
            <Setter Property="FontFamily" Value="Palatino Linotype"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль панели игрока -->
        <Style x:Key="PlayerPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#40000000"/>
            <Setter Property="BorderBrush" Value="{StaticResource CopperBrush}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль кнопки -->
        <Style x:Key="SetupButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#80202020"/>
            <Setter Property="Foreground" Value="{StaticResource GoldBrush}"/>
            <Setter Property="FontFamily" Value="Palatino Linotype"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="{StaticResource CopperBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Rectangle x:Name="highlight" 
                                           Fill="{StaticResource GoldBrush}" 
                                           Opacity="0" 
                                           RadiusX="8" 
                                           RadiusY="8"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A0404040"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                                <Setter TargetName="highlight" Property="Opacity" Value="0.2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Gold" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#60101010"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль TextBox -->
        <Style x:Key="SetupTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#40000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource CopperBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Palatino Linotype"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Gold" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль ComboBox -->
        <Style x:Key="SetupComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#40000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource CopperBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Palatino Linotype"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#50000000"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="10">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#70B86F2F"/>
                                            <Setter Property="Foreground" Value="{StaticResource GoldBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#90B86F2F"/>
                                            <Setter Property="Foreground" Value="{StaticResource GoldBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton"
                                                  Grid.Column="2"
                                                  Focusable="False"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Background="Transparent"
                                                  BorderBrush="Transparent">
                                        <ToggleButton.Template>
                                            <ControlTemplate>
                                                <Border Background="Transparent">
                                                    <Path x:Name="Arrow"
                                                          Fill="{StaticResource GoldBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                </Border>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                    <ContentPresenter x:Name="ContentSite"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"
                                                      Margin="10,0,30,0"
                                                      Content="{TemplateBinding SelectionBoxItem}"/>
                                    <Popup x:Name="Popup"
                                           Placement="Bottom"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           AllowsTransparency="True"
                                           PopupAnimation="Slide"
                                           Focusable="False">
                                        <Border x:Name="DropDownBorder"
                                                Background="#80000000"
                                                BorderBrush="{StaticResource GoldBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                                <Setter TargetName="DropDownBorder" Property="Background" Value="#90000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль панели описания фракции -->
        <Style x:Key="FactionDescPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#50000000"/>
            <Setter Property="BorderBrush" Value="{StaticResource CopperBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <!-- Стиль текста описания -->
        <Style x:Key="DescTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontFamily" Value="Palatino Linotype"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="20"/>
        </Style>

        <!-- Стиль заголовка фракции -->
        <Style x:Key="FactionTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource DescTextStyle}">
            <Setter Property="Foreground" Value="{StaticResource GoldBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Стиль пункта списка -->
        <Style x:Key="BulletPointStyle" TargetType="TextBlock" BasedOn="{StaticResource DescTextStyle}">
            <Setter Property="Margin" Value="15,2,0,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Фоновое изображение -->
        <Image Source="/GameBoardBackground.jpg" Stretch="UniformToFill" Opacity="0.7"/>

        <!-- Заголовок окна -->
        <TextBlock Text="ПОДГОТОВКА К ДУЭЛИ" 
                   Style="{StaticResource TitleStyle}"
                   FontSize="42"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   Margin="0,40,0,0"/>

        <!-- Основная область -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
              Width="1200" Height="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ИГРОК 1 -->
            <Border Grid.Column="0" Style="{StaticResource PlayerPanelStyle}"
                    Margin="20,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок игрока 1 -->
                    <TextBlock Grid.Row="0" Text="ПЕРВЫЙ ИГРОК" 
                               Style="{StaticResource TitleStyle}"
                               FontSize="28"
                               Margin="0,0,0,20"/>

                    <!-- Имя игрока 1 -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="Имя мага:" 
                                   Style="{StaticResource DescTextStyle}"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="Player1NameBox" 
                                 Style="{StaticResource SetupTextBoxStyle}"
                                 Height="45"/>
                    </StackPanel>

                    <!-- Фракция игрока 1 -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Выберите фракцию:" 
                                   Style="{StaticResource DescTextStyle}"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="Player1FactionBox" 
                                  Style="{StaticResource SetupComboBoxStyle}"
                                  SelectionChanged="Player1FactionBox_SelectionChanged">
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👑 " FontSize="18" Foreground="#FFD700"/>
                                    <TextBlock Text="Люди" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🐺 " FontSize="18" Foreground="#32CD32"/>
                                    <TextBlock Text="Звери" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔮 " FontSize="18" Foreground="#9370DB"/>
                                    <TextBlock Text="Мифические" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🌪️ " FontSize="18" Foreground="#00CED1"/>
                                    <TextBlock Text="Стихии" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
                                </StackPanel>
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <!-- Описание фракции игрока 1 -->
                    <Border Grid.Row="3" Style="{StaticResource FactionDescPanelStyle}">
                        <StackPanel>
                            <TextBlock x:Name="Player1FactionTitle" 
                                       Style="{StaticResource FactionTitleStyle}"
                                       Text="Люди"/>
                            <TextBlock x:Name="Player1FactionDesc" 
                                       Style="{StaticResource DescTextStyle}"
                                       TextWrapping="Wrap">
                                <Run Text="Стратегия баланса и защиты"/><LineBreak/>
                                <Run Text="• Универсальные карты"/><LineBreak/>
                                <Run Text="• Хорошая защита"/><LineBreak/>
                                <Run Text="• Стабильная стратегия"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Центральный разделитель -->
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="⚔" 
                               FontSize="60" 
                               Foreground="{StaticResource GoldBrush}" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="ПРОТИВ" 
                               Style="{StaticResource TitleStyle}"
                               FontSize="24" 
                               Margin="0,20,0,0"/>
                    <TextBlock Text="🎴" 
                               FontSize="60" 
                               Foreground="{StaticResource GoldBrush}" 
                               HorizontalAlignment="Center" 
                               Margin="0,20,0,0"/>
                </StackPanel>
            </Grid>

            <!-- ИГРОК 2 -->
            <Border Grid.Column="2" Style="{StaticResource PlayerPanelStyle}"
                    Margin="10,0,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок игрока 2 -->
                    <TextBlock Grid.Row="0" Text="ВТОРОЙ ИГРОК" 
                               Style="{StaticResource TitleStyle}"
                               FontSize="28"
                               Margin="0,0,0,20"/>

                    <!-- Имя игрока 2 -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="Имя мага:" 
                                   Style="{StaticResource DescTextStyle}"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="Player2NameBox" 
                                 Style="{StaticResource SetupTextBoxStyle}"
                                 Height="45"/>
                    </StackPanel>

                    <!-- Фракция игрока 2 -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Выберите фракцию:" 
                                   Style="{StaticResource DescTextStyle}"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="Player2FactionBox" 
                                  Style="{StaticResource SetupComboBoxStyle}">
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👑 " FontSize="18" Foreground="#FFD700"/>
                                    <TextBlock Text="Люди" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🐺 " FontSize="18" Foreground="#32CD32"/>
                                    <TextBlock Text="Звери" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔮 " FontSize="18" Foreground="#9370DB"/>
                                    <TextBlock Text="Мифические" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🌪️ " FontSize="18" Foreground="#00CED1"/>
                                    <TextBlock Text="Стихии" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
                                </StackPanel>
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <!-- Описание фракции игрока 2 -->
                    <Border Grid.Row="3" Style="{StaticResource FactionDescPanelStyle}">
                        <StackPanel>
                            <TextBlock x:Name="Player2FactionTitle" 
                                       Style="{StaticResource FactionTitleStyle}"
                                       Text="Звери"/>
                            <TextBlock x:Name="Player2FactionDesc" 
                                       Style="{StaticResource DescTextStyle}"
                                       TextWrapping="Wrap">
                                <Run Text="Агрессия и скорость"/><LineBreak/>
                                <Run Text="• Быстрые атаки"/><LineBreak/>
                                <Run Text="• Внезапные нападения"/><LineBreak/>
                                <Run Text="• Высокая мобильность"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Кнопки управления -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,60">
            <Button Content="ОТМЕНА" 
                    Style="{StaticResource SetupButtonStyle}"
                    Margin="0,0,30,0"
                    Click="BackButton_Click"/>
            <Button Content="НАЧАТЬ ДУЭЛЬ" 
                    Style="{StaticResource SetupButtonStyle}"
                    FontSize="18"
                    Width="250"
                    Click="StartButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="Gold" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                </Button.Effect>
            </Button>
        </StackPanel>

        <!-- Подсказка внизу -->
        <TextBlock Text="Введите имена магов и выберите их фракции для начала эпической дуэли" 
                   Style="{StaticResource DescTextStyle}"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,25"/>
    </Grid>
</Window>
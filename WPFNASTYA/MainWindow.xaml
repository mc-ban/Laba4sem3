<Window x:Class="CardGame.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Menu" 
        Height="1080" 
        Width="1920"
        WindowState="Maximized" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Black">

    <Window.Resources>
        <Style x:Key="FantasyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#432C1A"/>
            <Setter Property="FontFamily" Value="Palatino Linotype, Georgia, Serif"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="105"/>
            <Setter Property="Width" Value="450"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#8B4513"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Orange" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Viewbox Stretch="UniformToFill">
        <Grid Width="1920" Height="1080">

            
            <Image Stretch="UniformToFill" Source="/менюНастя.jfif"/>

            <StackPanel  HorizontalAlignment="Center" Margin="0,30,0,0">

                <Button Content="НАЧАТЬ ИГРУ" 
                        Style="{StaticResource FantasyButtonStyle}" 
                        Margin="0,0,0,32" Height="361" Width="820" FontSize="50"
                        Click="StartGameButton_Click"/>
                <!-- В StackPanel с кнопками добавьте: -->
                <Button Content="ЗАГРУЗИТЬ ИГРУ" 
        Style="{StaticResource FantasyButtonStyle}" 
        Margin="0,0,0,0" Height="300" Width="820" FontSize="50"
        Click="LoadGameButton_Click"/>
                <Button Content="ВЫХОД" 
                        Style="{StaticResource FantasyButtonStyle}"
                        Click="ExitButton_Click" Height="318" Width="814" FontSize="50" RenderTransformOrigin="0.475,0.758"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
<Window x:Class="CardGame.GUI.LoadGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Загрузка игры" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#0A0A0A" ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стили из GameBoardWindow -->
        <Color x:Key="BrightGold">#FFC125</Color>
        <Color x:Key="BrightCopper">#B86F2F</Color>
        <SolidColorBrush x:Key="GoldBrush" Color="{StaticResource BrightGold}"/>
        <SolidColorBrush x:Key="CopperBrush" Color="{StaticResource BrightCopper}"/>

        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource GoldBrush}"/>
            <Setter Property="FontFamily" Value="Palatino Linotype"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#80202020"/>
            <Setter Property="Foreground" Value="{StaticResource GoldBrush}"/>
            <Setter Property="FontFamily" Value="Palatino Linotype"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="{StaticResource CopperBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                         Background="{TemplateBinding Background}"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="6">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Rectangle x:Name="highlight" 
                                    Fill="{StaticResource GoldBrush}" 
                                    Opacity="0" 
                                    RadiusX="6" 
                                    RadiusY="6"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A0404040"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                                <Setter TargetName="highlight" Property="Opacity" Value="0.2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Gold" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#60101010"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Стиль для элемента сохранения -->
        <Style x:Key="SaveItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#40000000"/>
            <Setter Property="BorderBrush" Value="{StaticResource CopperBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Image Source="/GameBoardBackground.jpg" Stretch="UniformToFill" Opacity="0.7"/>

        <!-- Заголовок -->
        <TextBlock Text="СОХРАНЕННЫЕ ИГРЫ" 
                   Style="{StaticResource TitleStyle}"
                   FontSize="36"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   Margin="0,40,0,0"/>

        <!-- Список сохранений -->
        <Border Background="#50000000" 
                BorderBrush="{StaticResource CopperBrush}"
                BorderThickness="2"
                CornerRadius="10"
                Margin="50,100,50,150">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Список сохранений -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="SavesList" ItemsSource="{Binding}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource SaveItemStyle}"
                                        MouseDown="SaveItem_MouseDown">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Информация о сохранении -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding SaveName}" 
                                                       Foreground="{StaticResource GoldBrush}"
                                                       FontSize="18"
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Player1Name}" 
                                                       Foreground="#CCCCCC"
                                                       FontSize="14"
                                                       Margin="0,5,0,0">
                                                <Run Text="vs "/>
                                                <Run Text="{Binding Player2Name}"/>
                                            </TextBlock>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="Ход: " Foreground="#888"/>
                                                <TextBlock Text="{Binding TurnNumber}" Foreground="White"/>
                                                <TextBlock Text=" • " Foreground="#888" Margin="5,0"/>
                                                <TextBlock Text="{Binding StatusDisplay}" Foreground="#32CD32"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding LastModified, StringFormat='Сохранено: {0:dd.MM.yyyy HH:mm}'}" 
                                                       Foreground="#666"
                                                       FontSize="12"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>

                                        <!-- Кнопка удаления -->
                                        <Button Grid.Column="1"
                                                Content="✕"
                                                Foreground="#FF4444"
                                                FontWeight="Bold"
                                                FontSize="16"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                Width="30" Height="30"
                                                Click="DeleteButton_Click"
                                                Tag="{Binding SaveName}">
                                            <Button.ToolTip>
                                                <TextBlock Text="Удалить сохранение" Foreground="White"/>
                                            </Button.ToolTip>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Сообщение если нет сохранений -->
                <TextBlock x:Name="NoSavesText"
                           Text="Нет сохраненных игр"
                           Style="{StaticResource TitleStyle}"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>

                <!-- Кнопки управления -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,20,0,10">
                    <Button Content="НАЗАД" 
                            Style="{StaticResource ButtonStyle}"
                            Click="BackButton_Click"/>
                    <Button x:Name="LoadButton"
                            Content="ЗАГРУЗИТЬ" 
                            Style="{StaticResource ButtonStyle}"
                            IsEnabled="False"
                            Click="LoadButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Кнопка закрытия -->
        <Button Content="✕"
                Foreground="{StaticResource GoldBrush}"
                FontSize="20"
                FontWeight="Bold"
                Background="Transparent"
                BorderBrush="Transparent"
                Width="40" Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Click="CloseButton_Click">
            <Button.Effect>
                <DropShadowEffect Color="Black" BlurRadius="5"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>